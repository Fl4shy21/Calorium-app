<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorium.Views.MenuPage"
             Title="Home"
             Shell.TabBarIsVisible="True"
             xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15" BackgroundColor="White">
            <Label Text="Calorium"
                   FontSize="35"
                   TextColor="LightGreen"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
            <Label 
            Text="Welcome to Calorium! This app will be your tool, containing all the essentials about training in the gym, eating well and resting properly."
            FontSize="20"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>

            <Label Text="Check out the "
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="20"
                   TextColor="Black"/>

            <Label Text="Calorium website"
                   TextDecorations="Underline"
                   TextColor="LightGreen"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="20"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="CaloriumURL_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorium.Views.Training"
             Title=""
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="White" Padding="10" Spacing="10">
            <Grid Grid.Row="1" Margin="25, 10, 25, 10">
                <RoundRectangle CornerRadius="25" Fill="#7ce6a3" HeightRequest="50"/>
                <SearchBar x:Name="searchBar" Placeholder="Search..." TextChanged="SearchBar_TextChanged" TextColor="Black" BackgroundColor="#7ce6a3"/>
            </Grid>
            
            <skia:SKLottieView 
                Source="bicep_animation.json"
                WidthRequest="100"
                HeightRequest="100"
                RepeatCount="-1"
                RepeatMode="Restart"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

            <Label 
            Text="Training:"
            FontSize="25"
            TextColor="Black"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

            <Label Text="Beginners:"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontSize="25"/>

            <Button Text="Getting adjusted"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="usedBtn"
                    Pressed="usedBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0fd1ad" Offset="0.2"/>
                        <GradientStop Color="#7ce6a3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="usedLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Button Text="Warming up"
                    BackgroundColor="#7ce6a3"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="warmupBtn"
                    Pressed="warmupBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7ce6a3" Offset="0.2"/>
                        <GradientStop Color="#0fd1ad" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="warmupLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Button Text="Rest"
                    BackgroundColor="#7ce6a3"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="restBtn"
                    Pressed="restBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0fd1ad" Offset="0.2"/>
                        <GradientStop Color="#7ce6a3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="restSetsLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label x:Name="restTrainingLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Button Text="Progressive overload"
                    BackgroundColor="#7ce6a3"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="overloadBtn"
                    Pressed="overloadBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7ce6a3" Offset="0.2"/>
                        <GradientStop Color="#0fd1ad" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="overloadLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Label Text="Intermediates:"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontSize="25"/>

            <Button Text="Switching between exercises"
                    BackgroundColor="#7ce6a3"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="switchingBtn"
                    Pressed="switchingBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0fd1ad" Offset="0.2"/>
                        <GradientStop Color="#7ce6a3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="switchingLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Button Text="Training to failure"
                    BackgroundColor="#7ce6a3"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="failureBtn"
                    Pressed="failureBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7ce6a3" Offset="0.2"/>
                        <GradientStop Color="#0fd1ad" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="failureLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Label Text="Gym rats:"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontSize="25"/>

            <Button Text="What is Heavy Duty?"
                    BackgroundColor="#7ce6a3"
                    TextColor="Black"
                    FontSize="15"
                    x:Name="heavydutyBtn"
                    Pressed="heavydutyBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0fd1ad" Offset="0.2"/>
                        <GradientStop Color="#7ce6a3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="heavydutyLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Button Text="Junk volume"
                   BackgroundColor="#7ce6a3"
                   TextColor="Black"
                   FontSize="15"
                   x:Name="junkBtn"
                   Pressed="junkBtn_Pressed">
                <Button.Shadow>
                    <Shadow 
                        Brush="#7ce6a3"
                        Offset="5,5"
                        Radius="25"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#7ce6a3" Offset="0.2"/>
                        <GradientStop Color="#0fd1ad" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="junkLabel" Text="" FontSize="20" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorium.Views.ArnoldSplit"
             Title="Arnold Split">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="White" Spacing="10"
                             Padding="10">
            <Label Text="Select the type of the workout according to your level of experience in the gym: "
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   FontSize="20"/>

            <Button Text="High Volume"
                    BackgroundColor="LightGreen"
                    TextColor="Black"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    x:Name="arnoldVolumeBtn"
                    Clicked="arnoldVolumeBtn_Clicked"/>

            <Button Text="High Intensity"
                    BackgroundColor="LightGreen"
                    TextColor="Black"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    x:Name="arnoldIntensityBtn"
                    Clicked="arnoldIntensityBtn_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
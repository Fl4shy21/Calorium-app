<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorium.Views.OnboardingPage"
             xmlns:views="clr-namespace:Calorium.Views">
    <VerticalStackLayout BackgroundColor="White" Spacing="10" Padding="10">
        <Label Text="This is some invisible text!"
                   FontSize="35"
                   TextColor="White"/>
        <Label Text="Welcome to Calorium!"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               TextColor="Black"
               FontSize="20"/>
        <Label Text="Check out our website!"
                       SemanticProperties.HeadingLevel="Level1"
                       FontSize="20"
                       HorizontalOptions="Center"
                       TextColor="Black"
                       VerticalOptions="Center"/>
        <Image Source="globe_solid"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HeightRequest="50"
               WidthRequest="50">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="CaloriumURL_Tapped"/>
            </Image.GestureRecognizers>
        </Image>
        <Button
                    Text="Skip"
                    Clicked="GoToCalorium_Clicked"
                    TextColor="Black"
                    BackgroundColor="LightGreen"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorium.Views.ChooseYourPlan_Intermediate"
             Title="Choose Your Plan (Intermediate)">
    <VerticalStackLayout BackgroundColor="White" Spacing="15" Padding="15">
        <Button Text="Push-Pull-Legs"
                x:Name="PPLBtn"
                Clicked="PPLBtn_Clicked"
                TextColor="Black"
                BackgroundColor="LightGreen"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

        <Button Text="Back"
                x:Name="backBtn"
                Clicked="backBtn_Clicked"
                TextColor="Black"
                BackgroundColor="LightGreen"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>